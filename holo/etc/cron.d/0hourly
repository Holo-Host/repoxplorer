# Run the hourly jobs
SHELL=/bin/bash
PATH=/sbin:/bin:/usr/sbin:/usr/bin:/usr/local/bin
MAILTO=root
GITHUB_PERSONAL_ACCESS_TOKEN=<sanitized for security purposes>
01 * * * * root run-parts /etc/cron.hourly
30 * * * * root repoxplorer-github-organization --org Holo-Host --token $GITHUB_PERSONAL_ACCESS_TOKEN --skip-fork --output-path /etc/repoxplorer/defs/Holo-Host.yaml
35 * * * * root repoxplorer-github-organization --org holochain --token $GITHUB_PERSONAL_ACCESS_TOKEN --skip-fork --output-path /etc/repoxplorer/defs/holochain.yaml

